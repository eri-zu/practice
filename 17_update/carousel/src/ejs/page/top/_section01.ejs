<div class="section">
  <div class="wrap">
    <div class="slider">
      <ul class="slider__inner js-slider_inner">
        <% for (let i = 0; i < 8; i++) { %>
        <li class="slider__item js-slider_item">
          <img src="./assets/resource/img/pic_0<%-i + 1%>.jpg" alt="" />
        </li>
        <% }%>
      </ul>
    </div>

    <ul class="nav">
      <div class="btn js-slider_left">left</div>
      <ul class="inidicator">
        <% for (let i = 0; i < 8; i++) { %> <%if(i == 0) {%>
        <li class="inidicator__item js-slider_indicator is-active"></li>
        <%} else {%>
        <li class="inidicator__item js-slider_indicator"></li>
        <%}%> <%}%>
      </ul>
      <div class="btn js-slider_right">right</div>
    </ul>
  </div>
</div>
