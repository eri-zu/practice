#MainContent{
  padding-top:100px;
  font-size:20px;
  padding-bottom:100px!important;
}

h1{
  font-size:40px;
}
h2,h2.title{
font-size:30px;}
h4, .h4{
  font-size:15px;
}
.title-wrapper-with-link .title,.customer>h1, .customer__title,.cart-item__name{
  font-family:'PP'
}
.underlined-link, .customer a{
  text-decoration:underline;
  text-underline-offset: 3px;
}
.quantity{
  width:120px;
}

.product-option,.price,.totals__subtotal,.totals__subtotal-value,.tax-note{
  font-size:15px!important;
}
.cart__ctas{
  width:200px!important;
  height: 40px!important;
}
.cart__checkout-button{
  max-width:360px!important;
  font-size:16px!important;
}

.quantity__button svg{
    
    width:10px;
  }
  
@media screen and (min-width: 751px){
  html body.gradient{
    background:#093057;
  }
  #MainContent{
    min-height:67vh;
    background:white;
  }
  .products__list{
    margin-top:3.33312vw;
  }
  .quantity{
  width:110px;
    height:30px;
}
.quantity  .quantity__button{
  width:30px;
}
  .cart__ctas .cart__checkout-button.button{
    padding: 10px 20px;
  }
.cart__blocks {
    text-align: -webkit-right;
}
.cart-item__details>*,.cart__footer>*,.cart-item__details>*{
  max-width:300px!important;
  width:300px!important;
}  
  .cart-item__image-container{
  width:150px;
}
 #create_customer .field  input,customer_login  .field  input{
   font-size: 20px;
    padding-left: 75px;
 }
}

@media screen and (max-width: 750px){
  .products__list{
    margin-top:38px;
  }
  #MainContent{
padding-top:65px}
.cart-item__quantity  .quantity__button{
 width:35px;   
  }
  
.cart__blocks .cart__ctas{
  margin:auto;
}
  
}
button[type=submit]{
  color:rgb(18,18,18);
}
#footer button[type=submit]{
  color:white;
}
.customer form{
  max-width:500px;
  margin:20px auto;
}
.caption-with-letter-spacing{
  font-size:16px;
}
